{
  "name": "exclusible-api",
  "version": "0.0.1",
  "description": "Simple tech challenge, for user registering API that will be consumed by a ReactJS/NextJS frontend. This will be managed by a Admin CRUD panel.",
  "main": "server.ts",
  "scripts": {
    "serve": "nodemon server.ts",
    "lint": "eslint . --ext .ts",
    "ts-check": "tsc",
    "prepare": "cd .. && husky install api/.husky",
    "db:migrate": "sequelize db:migrate",
    "model:create": "sequelize model:create",
    "migration:create": "sequelize migration:create",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "test": "jest . --detectOpenHandles"
  },
  "engines": {
    "node": "~16",
    "npm": "~8"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "Nuno Alexandre",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.4.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "umzug": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ts-check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.26.1",
    "express": "^4.17.3",
    "mysql2": "^2.3.3",
    "sequelize": "^6.19.0",
    "sqlite3": "^5.0.3"
  },
  "jest": {
    "setupFiles": [
      "./tests/boot.js"
    ]
  }
}
