{
  "name": "exclusible-api",
  "version": "0.0.1",
  "description": "Simple tech challenge, for user registering API that will be consumed by a ReactJS/NextJS frontend. This will be managed by a Admin CRUD panel.",
  "main": "server.ts",
  "scripts": {
    "serve": "nodemon server.ts",
    "lint": "eslint . --ext .ts",
    "ts-check": "tsc",
    "prepare": "cd .. && husky install api/.husky"
  },
  "engines": {
    "node": "~16",
    "npm": "~8"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "Nuno Alexandre",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ts-check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.17.3"
  }
}
