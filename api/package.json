{
  "name": "exclusible-api",
  "version": "0.0.1",
  "description": "Simple tech challenge, for user registering API that will be consumed by a ReactJS/NextJS frontend. This will be managed by a Admin CRUD panel.",
  "main": "server.ts",
  "scripts": {
    "serve": "nodemon server.ts",
    "lint": "eslint . --ext .ts",
    "ts-check": "tsc",
    "prepare": "cd .. && husky install api/.husky",
    "db:migrate": "ts-node migrations/migrate.ts",
    "model:create": "sequelize model:create",
    "migration:create": "sequelize migration:create",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed:all": "sequelize db:seed:all",
    "test": "jest . --detectOpenHandles",
    "prettier": "prettier --check --write ."
  },
  "engines": {
    "node": "~16",
    "npm": "~8"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "Nuno Alexandre",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.24",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "2.6.2",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "umzug": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts}": [
      "npm run prettier",
      "npm run lint",
      "npm run test",
      "git add"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "sequelize": "^6.19.0",
    "sqlite3": "^5.0.3",
    "swagger-ui-express": "^4.3.0",
    "ts-openapi": "^1.0.3"
  },
  "jest": {
    "setupFiles": [
      "./tests/boot.js"
    ]
  }
}
